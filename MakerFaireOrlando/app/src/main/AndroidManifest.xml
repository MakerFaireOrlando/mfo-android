<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.makerfaireorlando.makerfaireorlando">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Ommf" >
        <activity
            android:name="com.makerfaireorlando.makerfaireorlando.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.makerfaireorlando.makerfaireorlando.Settings"
            android:label="Settings" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.makerfaireorlando.app.MainActivity" />
        </activity>
        <activity
            android:name="com.makerfaireorlando.makerfaireorlando.EmailActivity"
            android:label="@string/title_activity_email"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
    </application>

</manifest>
